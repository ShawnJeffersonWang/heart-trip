syntax = "v1"

info(
    title: "旅游服务"
    desc: "旅游服务"
    author: "Shawn"
    email: "xw2002121@gmail.com"
    version: "v1"
)

import (
    "homestay/homestay.api"
    "homestayBusiness/homestayBusiness.api"
    "homestayComment/homestayComment.api"
)

//=====================================> travel-homestay v1 <=================================
//no need login
@server(
    prefix: travel/v1
    group: homestay
)
service travel {
    @doc "homestay room detail"
    @handler homestayDetailWithoutLogin
    get /homestay/homestayDetailWithoutLogin (HomestayDetailReq) returns (HomestayDetailResp)

    @doc "homestay room list"
    @handler homestayList
    get /homestay/homestayList (HomestayListReq) returns (HomestayListResp)

    @doc "query shop by type"
    @handler queryShopByType
    post /homestay/queryShopByType (QueryShopByTypeRequest) returns (QueryShopByTypeResponse)

    @doc "search by location"
    @handler searchByLocation
    get /homestay/searchByLocation (SearchByLocationReq) returns (SearchByLocationResp)

    @doc "boss all homestay room"
    @handler businessList
    post /homestay/businessList (BusinessListReq) returns (BusinessListResp)

    @doc "guess homestay room"
    @handler guessList
    get /homestay/guessList (GuessListReq) returns (GuessListResp)
}

// bug: 一直根据jwt校验不出userId, 原因是这里没有加jwt中间件
// need login
@server(
    prefix: travel/v1
    group: homestay
    jwt: JwtAuth
)
service travel {
    @doc "homestay room detail"
    @handler homestayDetail
    get /homestay/homestayDetail (HomestayDetailReq) returns (HomestayDetailResp)

    @doc "add homestay"
    @handler addHomestay
    post /homestay/addHomestay (AddHomestayReq) returns (AddHomestayResp)

    @doc "delete homestay"
    @handler deleteHomestay
    delete /homestay/deleteHomestay (DeleteHomestayReq) returns (DeleteHomestayResp)

    @doc "update homestay"
    @handler updateHomestay
    put /homestay/updateHomestay (UpdateHomestayReq) returns (UpdateHomestayResp)

    @doc "admin delete homestay"
    @handler adminDeleteHomestay
    delete /homestay/adminDeleteHomestay (AdminDeleteHomestayReq) returns (AdminDeleteHomestayResp)

    @doc "add guess"
    @handler addGuess
    post /homestay/addGuess (AddGuessReq) returns (AddGuessResp)

    @doc "my homestay room list"
    @handler myHomestayList
    get /homestay/myHomestayList (MyHomestayListReq) returns (MyHomestayListResp)

    @doc "seckill voucher order"
    @handler seckillVoucher
    post /homestay/seckillVoucher (SeckillVoucherRequest) returns (SeckillVoucherResponse)
}

